<div class='row'>
  <div class='col-md-4'>
    <h2>{{model.num_comments}} Comments</h2>
    <h4>{{model.comments.length}} Top-Level</h4>
    <hr>
    <ul class='media-list comments'>
      {{#each comment in model.comments}}
        <li class="media">
          {{display-comment comment=comment}}
        </li>
      {{/each}}
    </ul>
  </div>
  <div class='col-md-8'>{{outlet}}</div>
</div>
