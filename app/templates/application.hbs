<div class='navbar navbar-default navbar-fixed-top'>
  <div class='container'>
    <div class='navbar-header'>
      {{link-to 'Fair-Share' 'index' class='navbar-brand'}}
    </div>
    <div id='navbar' class='navbar-collapse collapse'>
      <ul class='nav navbar-nav'>
        <li>{{#link-to 'ubi' title='Universal Basic Income'}}<span class='glyphicon glyphicon-transfer'></span>{{/link-to}}</li>
        <li>{{#link-to 'btc' title='BTC Blockchain UBI'}}<span class='glyphicon glyphicon-bitcoin'></span>{{/link-to}}</li>
        <li><a target='reddit' href='https://reddit.com/r/FairShare' title='@reddit'><span class='glyphicon glyphicon-comment'></span></a></li>
        <li>{{#link-to 'about' title='About FairShare'}}<span class='glyphicon glyphicon-info-sign'></span>{{/link-to}}</li>
      </ul>
      {{#unless auth.address}}
        <form class="navbar-form navbar-right">
          <div class="form-group">
            <div class="input-group">
              {{#if auth.showPassPhrase}}
                {{input value=auth.passPhrase class="form-control" placeholder="FairShare passphrase"}}
              {{else}}
                {{input type='password' value=auth.passPhrase class="form-control" placeholder="FairShare passphrase"}}
              {{/if}}
              <span class="input-group-addon" title='Toggle Passphrase Visibility'>
                {{input type='checkbox' checked=auth.showPassPhrase}}
              </span>
            </div>
          </div>
        </form>
      {{/unless}}
      <ul class='nav navbar-nav navbar-right'>
        <li>{{#if user}}
          <a title='Logout of reddit' {{action 'logout'}}><span class='glyphicon glyphicon-user'></span> {{user.name}}</a>
        {{else}}
          <a title='Login with reddit' class='dontintercept' {{bind-attr href=loginUrl}}><span class='glyphicon glyphicon-user'></span></a>
        {{/if}}</li>
        {{#if auth.address}}
          <li>{{#link-to 'btc.address' auth.addressString}}<span class='glyphicon glyphicon-bitcoin'></span> {{auth.balanceBtc}}{{/link-to}}</li>
        {{/if}}
      </ul>
    </div>
  </div>
</div>
<div id='maincontainer' class='container'>{{outlet}}</div>
