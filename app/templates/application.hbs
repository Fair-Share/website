<div class='navbar navbar-default navbar-fixed-top'>
  <div class='container'>
    <div class='navbar-header'>
      {{link-to 'Fair-Share' 'index' class='navbar-brand'}}
    </div>
    <div id='navbar' class='navbar-collapse collapse'>
      <ul class='nav navbar-nav'>
        <li>{{link-to 'ubi' 'ubi'}}</li>
        <li>{{link-to 'about' 'about'}}</li>
        <li><a target='reddit' href='https://reddit.com/r/FairShare'>reddit</a></li>
        <li><a target='changetip' href='https://PoliticBot.tip.me'>changetip</a></li>
        <li><a target='github' href='https://github.com/Fair-Share'>github</a></li>
      </ul>
      <ul class='nav navbar-nav navbar-right'>
        <li>{{link-to 'Privacy Policy' 'privacy'}}</li>
        <li>{{#if user}}
          <a title='logout' {{action 'logout'}}>Logout: {{user.name}}</a>
        {{else}}
          <a title='Login' class='dontintercept' {{bind-attr href=loginUrl}}>Login at reddit</a>
        {{/if}}</li>
      </ul>
    </div>
  </div>
</div>
<div id='maincontainer' class='container'>{{outlet}}</div>
<footer class='footer'>
  <hr>
  <div class='container'>
    {{#if auth.addressData.total_txs}}
      {{#link-to 'btc.address' auth.addressString tagName='button' class='btn form-control' classNameBindings="auth.addressData.total_txs:btn-success:btn-default"}}
        {{auth.address}} - Balance: {{auth.balance}} satoshi
      {{/link-to}}
    {{else}}
      <div class='row'>
        <div class='col-sm-6'>
          {{input type='password' value=auth.passPhrase class="form-control" placeholder="FairShare passphrase"}}
        </div><div class='col-sm-6'>
          {{#if auth.address}}
            {{#link-to 'btc.address' auth.addressString tagName='button' class='btn form-control' classNameBindings="auth.addressData.total_txs:btn-success:btn-default"}}
              Balance: {{auth.balance}} satoshi
            {{/link-to}}
          {{else}}
            {{input type='password' value=auth.passPhraseRepeat class="form-control" placeholder="Repeat FairShare passphrase"}}
          {{/if}}
        </div>
      </div>
    {{/if}}
  </div>
  <hr>
</footer>
